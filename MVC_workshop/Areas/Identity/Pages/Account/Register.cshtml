@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="row">
    <div  align="center">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post"  align="center">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">  
                 <input type="radio" name="role" value="Student" checked="checked"/> Student
                 <input type="radio" name="role" value="Teacher"/> Teacher
            </div> 
            <br />
            <div class="form-floating mx-5">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-floating mx-5">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-floating mx-5">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <br/>
            <button id="registerSubmit" type="submit" class="w-30 btn btn-secondary ">Register</button>
        </form>
    </div>
   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
